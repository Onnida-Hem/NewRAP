<Window x:Class="RAP_WPF.View.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RAP_WPF.View"
        mc:Ignorable="d"
        Title="ErrorWindow" Height="200" Width="300">
    <Grid>
        <Image Name="ErrorIcon" Source="../Resources/error_icon.png" Height="100" VerticalAlignment="Top" Width="100" Margin="50,20,50,0"/>
        <Label Name="ErrorLabel" Foreground="Red" Margin="20,120,20,0" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
