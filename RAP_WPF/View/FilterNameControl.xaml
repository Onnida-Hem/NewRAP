<UserControl x:Class="RAP_WPF.View.FilterNameControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RAP_WPF.View"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="220">
    <Grid>
        <Label Content="Filter by Name :&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25"/>
        <TextBox x:Name="filterByNameTextBox" HorizontalAlignment="Left" Height="25" Margin="100,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" KeyUp="filterByNameTextBox_KeyUp"/>
    </Grid>
</UserControl>
